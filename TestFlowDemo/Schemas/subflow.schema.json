{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/subflow.schema.json",
  "title": "Subflow",
  "type": "object",
  "properties": {
    "Name": { "type": "string" },
    "Type": { "type": "string", "enum": ["SubFlow"] },
    "Description": { "type": "string" },
    "Steps": {
      "type": "array",
      "items": { "$ref": "#/definitions/step" },
      "minItems": 1
    }
  },
  "required": ["Steps"],
  "additionalProperties": false,
  "definitions": {
    "step": {
      "type": "object",
      "properties": {
        "Name": { "type": "string", "minLength": 1 },
        "Description": { "type": "string" },
        "Device": { "type": "string" },
        "Command": { "type": "string" },
        "Parameters": { "type": "object" },
        "ExpectedResults": { "type": "object" },
        "TimeoutMs": { "type": "integer", "minimum": 0 }
      },
      "required": ["Name", "Device"],
      "additionalProperties": true
    }
  }
}

